
<% if current_user.favorite?(micropost) %> 
    <%= form_for(current_user.favs.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit '★ remove', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %> 
    <%= form_for(current_user.favs.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit '☆ add', class: 'btn btn-info btn-xs' %>
    <% end %>
<% end %>